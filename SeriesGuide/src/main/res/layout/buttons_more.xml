<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/buttonShowInfoIMDB"
        style="@style/Widget.SeriesGuide.Button.Borderless.Sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="?attr/drawableLink"
        android:text="@string/imdb" />

    <Button
        android:id="@+id/buttonTVDB"
        style="@style/Widget.SeriesGuide.Button.Borderless.Sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="?attr/drawableLink"
        android:text="@string/tvdb" />

    <Button
        android:id="@+id/buttonTrakt"
        style="@style/Widget.SeriesGuide.Button.Borderless.Sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableStart="?attr/drawableLink"
        android:text="@string/trakt" />

    <Button
        android:id="@+id/buttonWebSearch"
        style="@style/Widget.SeriesGuide.Button.Borderless.Sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/web_search"
        tools:drawableLeft="?attr/drawableSearch" />

    <Button
        android:id="@+id/buttonShouts"
        style="@style/Widget.SeriesGuide.Button.Borderless.Sheet"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/comments"
        tools:drawableLeft="?attr/drawableComments" />

</merge>